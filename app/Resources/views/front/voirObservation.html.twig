{% extends "layout.html.twig" %}

{% block body %}

    <h2 xmlns="http://www.w3.org/1999/html">{% trans %}Observation{% endtrans %}</h2>


    <h3 style="margin-bottom: 30px; margin-left: 5px">{% if observation.oiseau.nomVern is not empty %}
            {{ observation.oiseau.nomVern }}<br>
        {% endif %}
        {{ observation.oiseau.nomComplet }} </h3>

    <div class=" col-md-5 col-xs-12">
        <div style="margin-bottom: 20px;"><strong style="font-weight: bold; font-size: 20px ">{% trans %}Lieu :{% endtrans %}</strong></div>

        <div style="margin-bottom: 20px;"><strong style="font-weight: bold; font-size: 20px ">{% trans %}Date : {% endtrans %}</strong> {{ observation.date | date('d-m-Y') }}
        </div>
        <div style="margin-bottom: 20px;"><strong style="font-weight: bold; font-size: 20px ">{% trans %}Heure : {% endtrans %}</strong>{{ observation.date | date('d-m-Y') }}
        </div>

        <div><strong style="font-weight: bold; font-size: 20px ">{% trans %}Observation :{% endtrans %}</strong>
            <div style="border: 1px solid black;border-radius: 12px;padding: 18px; margin-top: 20px; font-size: 20px"> {{ observation.content|raw }}</div>
        </div>
    </div>

    <div class="col-md-3  col-xs-12">

        <img style=" width: 236px;" src="{{ asset(observation.photoWebPath) }}" alt="" width="100" height="125"/>
        <button  style="width: 235px;height: 50px; margin-bottom: 40px" type="submit" id="profil_enregistrer" name="profil[enregistrer]" class="btn envoyer_formulaire btn">
            <a style="color: white; font-size: 20px;" href=" {{ observation.oiseau.url }}">{% trans %}Fiche de l'éspèce{% endtrans %}</a></button>
        <div>
            <strong style="margin-left: 10px; font-weight: bold; font-size: 20px " >
                Son :
                    <audio id="myplay3" controls >
                        <source src="{{ asset(observation.audioWebPath) }}"></audio>
            </strong></div>

    </div>

    <div class=" col-md-2 col-xs-12">
        <strong style="font-weight: bold; font-size: 20px ">{% trans %}Carte{% endtrans %}</strong>

    </div>

{% endblock %}