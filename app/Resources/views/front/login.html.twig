{% extends "layout.html.twig" %}

{% block body %}

    <h2>{% trans %}Se connecter{% endtrans %}</h2>
    {% if error %}
        <div class="alert alert-danger"> {{ error.message }} </div>
    {% endif %}
    <div class="container">
        <form action="{{ path('login_check') }}" method="post" class="login">
            <div class="row row-centered">
                <div class="form-group col-xs-12 col-md-12 ">

                    <label for="username" class="col-xs-12 col-md-3  control-label loginbis ">
                        {% trans %}Nom d'utilisateur :{% endtrans %}</label>
                    <div class="col-xs-12 col-md-9 col-centered">
                        <input type="text" id="username" name="_username" value="{{ last_username }}"
                               class="form-control formulaire_contact"/>
                    </div>
                </div>
                <div class="form-group  col-xs-12 col-md-12 col-centered">

                    <label for="password" class="col-xs-12 col-md-3 col-centered control-label loginbis ">
                        {% trans %}Mot de passe :{% endtrans %}</label>
                    <div class="col-xs-12 col-md-9 col-centered">
                        <input type="password" id="password" name="_password"
                               class="form-control formulaire_contact"/>
                    </div>
                </div>

                <input type="submit" value="Se connecter" class="btn envoyer_formulaire col-centered"/>
            </div>
            <div class="form-group" style="text-align: center;">
                <div class=" col-centered password mdp">
                    <a class="bts-mdp" style="background-color: #ff4d4f" href="{{ path ('reset') }}">{% trans %}Mot de passe oubliÃ©{% endtrans %}</a> <span style="margin-left: 5px;"><a  class="bts"  href="{{ path ('inscription') }}">{% trans %}S'inscrire{% endtrans %}</span></a>
                </div>
            </div>
        </form>

    </div>
{% endblock %}