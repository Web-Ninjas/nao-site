{% extends "back-layout.html.twig" %}

{% set profils = {
'ROLE_PARTICULIER': 'Particulier',
'ROLE_ADMIN': 'Admin',
'ROLE_NATURALISTE': 'Naturaliste',
'ROLE_CONTRIBUTEUR': 'Contributeur'


} %}
{% block content %}


    <h4>Mes informations Personnelles</h4>


    <div class="formProfil row">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        {# Génération manuelle et éclatée : #}
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.name, "Nom :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire '}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.name) }}

            <div class="col-lg-5">
                {# Génération de l'input. #}
                {{ form_widget(form.name, {'attr': {'class': 'form-control blocs'}}) }}
            </div>
        </div>

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.firstName, "Prénom :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.firstName) }}

            <div class="col-lg-5">
                {# Génération de l'input. #}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control blocs'}}) }}
            </div>
        </div>

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.username, "Pseudo :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.username) }}

            <div class="col-lg-5">
                {# Génération de l'input. #}
                {{ form_widget(form.username, {'attr': {'class': 'form-control blocs' }}) }}
            </div>
        </div>

        <div class="form-group">

            <label class="col-lg-4 control-label titre_formulaire control-label required"
                   for="profil_username">Statut:</label>

            <div class="col-lg-5">
                <input disabled="disabled" type="text" name="statut" class="fixe form-control form-control blocs"
                       value={{ profils[app.user.roles[0]] }}>
            </div>
        </div>

        {% if 'ROLE_PARTICULIER' in form.vars.value.roles %}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.isNaturaliste, "Je veux être naturaliste :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.isNaturaliste) }}

                <div class="col-lg-5">
                    {# Génération de l'input. #}
                    {{ form_widget(form.isNaturaliste, {'attr': {'class': 'form-control blocs' }}) }}
                </div>
            </div>
        {% endif %}


        <div class="form-group pasNaturaliste">
            {# Génération du label. #}
            {{ form_label(form.nomEntreprise, "Nom de l'entreprise :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.nomEntreprise) }}

            <div class="col-lg-5">
                {# Génération de l'input. #}
                {{ form_widget(form.nomEntreprise, {'attr': {'class': 'form-control blocs' }}) }}
            </div>
        </div>

        <div class="form-group pasNaturaliste">
            {# Génération du label. #}
            {{ form_label(form.nSiret, "N° de siret :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.nSiret) }}

            <div class="col-lg-5">
                {# Génération de l'input. #}
                {{ form_widget(form.nSiret, {'attr': {'class': 'form-control blocs' }}) }}
            </div>
        </div>

        {% if 'ROLE_NATURALISTE' in form.vars.value.roles %}

            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.isContributeur, "Je veux être contributeur :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.isContributeur) }}

                <div class="col-lg-5">
                    {# Génération de l'input. #}
                    {{ form_widget(form.isContributeur, {'attr': {'class': 'form-control blocs' }}) }}
                </div>
            </div>

        {% endif %}
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.email, "Email :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.email) }}

            <div class="col-lg-5">
                {# Génération de l'input. #}
                {{ form_widget(form.email, {'attr': {'class': 'form-control blocs'}}) }}
            </div>
        </div>

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.birthDate, "Date de Naissance :", {'label_attr': {'class': 'col-lg-4 control-label titre_formulaire'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.birthDate) }}

            <div class="col-lg-5">
                {# Génération de l'input. #}
                {{ form_widget(form.birthDate, {'attr': {'class': 'form-control blocs'}}) }}
            </div>
        </div>

        <div class="form-group">

            <label class="col-lg-4 control-label titre_formulaire control-label required"
                   for="profil_username">Date de création de compte :</label>

            <div class="col-lg-5">
                <input disabled="disabled" type="text" name="registrationDate"
                       class="fixe form-control form-control blocs"
                       value={{ app.user.registrationDate |date('d/m/Y') }}>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-5 password">
                <a href="#">Modifier mot de passe</a>
            </div>
        </div>

        <div class="col-lg-offset-10">
            {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn envoyer_formulaire'}}) }}

        </div>

        {{ form_widget(form._token) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var isNaturaliste = false;

        {% if 'ROLE_PARTICULIER' in form.vars.value.roles and form.vars.value.demandeNaturaliste is null %}
            $(".pasNaturaliste").hide();
        {% else %}
            isNaturaliste = true;
        {% endif %}

        $("#profil_isNaturaliste").click(function(e) {

            if (isNaturaliste == false) {
                isNaturaliste = true;
                $(".pasNaturaliste").show();
            } else {
                isNaturaliste = false;
                $(".pasNaturaliste").hide();
            }
        });

    </script>

{% endblock %}